<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/includes/cadre_combi.css">
    <title>Document</title>
</head>
<body>

    <div id="combi_liste">
        <% for(i=0; i < combinaisons.length; i++){ %>
            <div id="<%= combinaisons[i].nom %>">
                <h3><%= combinaisons[i].nom %></h3>
                <div id="combi_info">
                    <% for(y=0; y < combinaison_produit.length; y++){ %>
                        <% if(combinaison_produit[y].id_combinaison === combinaisons[i].id){ %>
                            <% for(z=0; z < prod.length; z++){ %>
                                <% if(combinaison_produit[y].id_produit === prod[z].id_produit){ %>
                                    <div id="prod_info">
                                        <img id="prod_img" src="<%= prod[z].image %>" width="150px">
                                        <p><%= prod[z].nom %></p>
                                    </div>
                                <% } %>
                            <% } %>
                             <!-- <p> <%= combinaison_produit[y].id_produit %></p>  <br> -->
                        <% } %>
                    <% } %>
                </div>
                <form action="combinaisons/<%=combinaisons[i].id%>" method="post">
                    <div class="select-box">
                        <label for="select-box1" class="label select-box1"><span class="label-desc">Taille</span> </label>
                        <select id="select-box1" class="select" name="size" required="">
                            <option value="S">S</option>
                            <option value="M">M</option>
                            <option value="L">L</option>
                            <option value="XL">XL</option>
                        </select>
                    </div>
                    <%if(user_id === 0){%>
                        <input type="submit" id="buy" value="Ajouter au panier" disabled></input>
                        <script>
                            document.getElementById("buy").style.backgroundColor = "grey";
                        </script>
                    <%} else {%>
                        <input type="submit" id="buy" value="Ajouter au panier"></input>
                    <%}%>
                </form>
            </div>
        <% } %>
    </div>   
    
</body>
</html>